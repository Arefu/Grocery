<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GroceryList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroceryList"
    Shell.FlyoutBehavior="Flyout"
    Title="Grocery List">
    
    <FlyoutItem Title="Home" Icon="home.png">
        <Tab>
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="Home" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Shopping List" Icon="List.png">
        <Tab>
            <ShellContent Title="Shopping Lists" ContentTemplate="{DataTemplate local:ShoppingListsPage}" Route="ShoppingLists" />
        </Tab>
    </FlyoutItem>

</Shell>
