<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GroceryList.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:GroceryList"
    Shell.FlyoutBehavior="Flyout"
    Title="Grocery List">
    
    <FlyoutItem Title="Shopping List" Icon="list.png">
        <Tab>
            <ShellContent Title="Shopping Lists" ContentTemplate="{DataTemplate local:ShoppingListsPage}" Route="ShoppingLists" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Sales" Icon="save.png">
        <Tab>
            <ShellContent Title="Store Deals" ContentTemplate="{DataTemplate local:StoreDealsPage}" Route="StoreDeals" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Sales" Icon="save.png">
        <Tab>
            <ShellContent Title="Store Deals" ContentTemplate="{DataTemplate local:ShoppingListViewPage}" Route="StoreDeals" />
        </Tab>
    </FlyoutItem>
</Shell>
